<div class='columns is-centered'>
<div class='column is-4'>
<div class='box'>
<h2 class='title'>Sign up</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class='field'>
    <div class='control'>
      <%= f.input :username, required: true, autofocus: true, wrapper: false, input_html: { class:'input control' }, label_html: {class:'label'} %>
    </div>
  </div>
  <div class='field'>
    <div class='control'>
      <%= f.input :email, required: true, input_html: { autocomplete: "email" }, wrapper: false, input_html: { class:'input control' }, label_html: {class:'label'}  %>
    </div>
  </div>
  <div class='field'>
    <div class='control'>  
      <%= f.input :password,required: true, hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length), input_html: { autocomplete: "new-password" }, wrapper: false, input_html: { class:'input control' }, label_html: {class:'label'}  %>
    </div>
  </div>
  <div class='field'>
    <div class='control'>
      <%= f.input :password_confirmation, required: true, input_html: { autocomplete: "new-password" }, wrapper: false, input_html: { class:'input control' }, label_html: {class:'label'}  %>
    </div>
  </div>
  <div class='field'>
    <div class='control'>
      <%= f.button :submit, "Sign up", class:'button is-info is-medium' %>
    </div>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
</div>