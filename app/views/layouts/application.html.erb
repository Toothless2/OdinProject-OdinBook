<!DOCTYPE html>
<html>
  <head>
    <title>OdinOdinbook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_link_tag 'https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css' %>
  </head>

  <body>
    <% if flash[:notice] %>
      <div class="notification is-primary global-notification">
        <p class="notice"><%= notice %></p>
      </div>
    <%end%>

    <% if flash[:alert] %>
      <div class="notification is-danger global-notification">
        <p class="alert"><%= alert %></p>
      </div>
    <%end%>

    <% if user_signed_in? %>
      <%= render partial: '/layouts/navSignedIn'%>
    <%else%>
      <br />
      <div class='columns is-centered'>
        <div class='column is-half has-text-centered'>
          <img src='https://www.theodinproject.com/assets/odin-logo-2d729f16279e9fc3b58ce847eacf07f883bdfc95eb23bb5064ed59d36ef551d6.svg'>
          <h1 class='title'>The Odin Book</h1>
        </div>
      </div>
    <%end%>

    <%= yield %>
  </body>
</html>
