<!DOCTYPE html>
<html>
  <head>
    <title>OdinOdinbook</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

    <% if user_signed_in? %>
      <%= render partial: '/layouts/navSignedIn'%>
    <%else%>
      <br />
      <div class='columns is-centered'>
        <div class='column is-one-third'></div>
        <div class='column'>
              <img src='https://www.theodinproject.com/assets/odin-logo-2d729f16279e9fc3b58ce847eacf07f883bdfc95eb23bb5064ed59d36ef551d6.svg'>
              <h1 class='title'>The Odin Book</h1>
        </div>
      </div>
    <%end%>

    <%= yield %>
  </body>
</html>
