<div class="box">
  <article class="media">
    <div class="media-left">
      <figure class="image is-64x64">
        <img src="https://bulma.io/images/placeholders/128x128.png" alt="Image">
      </figure>
    </div>
    <div class="media-content">
      <div class="content">
        <p>
          <strong><%= post.user.username %></strong>
          <br>
          <%= post.title %>
          <br>
          <%= post.body %>
        </p>
      </div>
      <nav class="level">
          <%= link_to like_post_path(user_id: current_user.id, post_id: post.id), method: :post, class:'level-item' do%>
              <span class='icon'><i class="fa fa-heart"><%= post.likes.count %></i></span>
          <%end%>
      </nav>
    </div>
  </article>
</div>